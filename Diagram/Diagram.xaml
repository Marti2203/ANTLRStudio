<Styles xmlns="https://github.com/avaloniaui"
        xmlns:local="clr-namespace:ANTLRStudio.Diagram"
        xmlns:drawing="clr-namespace:ANTLRStudio.Drawing;assembly=ANTLRStudio.Drawing">
  <Style Selector="local|Diagram">
    
    <Setter Property="ItemTemplate">
      <DataTemplate>
        <drawing:TextContainer Text="{Binding}"></drawing:TextContainer>
      </DataTemplate>
    </Setter>
    <Setter Property="ItemsPanel">
      <ItemsPanelTemplate>
        <drawing:StructuredCanvas></drawing:StructuredCanvas>
      </ItemsPanelTemplate>
    </Setter>
  </Style>
</Styles>
